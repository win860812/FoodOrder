<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/recycler_bg">

    <ImageView
        android:id="@+id/recommend_image"
        android:layout_width="219dp"
        android:layout_height="215dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="rice"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend_image" />

    <ImageView
        android:id="@+id/recommend_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/recommend_name"
        app:layout_constraintTop_toBottomOf="@+id/recommend_name"
        app:srcCompat="@drawable/ic_mdi_star_rate" />

    <TextView
        android:id="@+id/recommend_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="4.5"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_star"
        app:layout_constraintStart_toEndOf="@+id/recommend_star"
        app:layout_constraintTop_toTopOf="@+id/recommend_star"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/recommend_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="160"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recommend_delivery_time"
        android:layout_width="34dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/time_bg"
        android:gravity="center"
        android:text="45 mins"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/recommend_star"
        app:layout_constraintTop_toBottomOf="@+id/recommend_star" />

    <TextView
        android:id="@+id/recommend_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Free Delivery"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_delivery_time"
        app:layout_constraintStart_toEndOf="@+id/recommend_delivery_time"
        app:layout_constraintTop_toTopOf="@+id/recommend_delivery_time" />

</androidx.constraintlayout.widget.ConstraintLayout>